<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		
		android:layout_width="380px"
		android:layout_height="80px"
		android:background="@drawable/color_choose_background"
		android:layout_gravity="bottom|center"	
		android:padding="10px"
		android:layout_centerHorizontal="true"
		
		android:id="@+id/barColorChoose"
		android:visibility="gone"
		
	>
	
	<!-- green_brown,right_green,yellow_orange,peach_red -->
		<Button
			android:layout_width="60px"
			android:layout_height="60px"
			android:background="@color/green_brown"
			android:id="@+id/colorButton_brown"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="10px"
		></Button>
		
		<Button
			android:layout_width="60px"
			android:layout_height="60px"
			android:background="@color/right_green"
			android:id="@+id/colorButton_green"
			android:layout_toRightOf="@id/colorButton_brown"
			android:layout_marginLeft="10px"
		></Button>
		
		<Button
			android:layout_width="60px"
			android:layout_height="60px"
			android:background="@color/yellow_orange"
			android:id="@+id/colorButton_yellow"
			android:layout_toRightOf="@id/colorButton_green"
			android:layout_marginLeft="10px"
		></Button>
		
		<Button
			android:layout_width="60px"
			android:layout_height="60px"
			android:background="@color/peach_red"
			android:id="@+id/colorButton_red"
			android:layout_toRightOf="@id/colorButton_yellow"
			android:layout_marginLeft="10px"
		></Button>
		
		<Button
			android:layout_width="60px"
			android:layout_height="60px"
			android:background="@color/purple"
			android:id="@+id/colorButton_purple"
			android:layout_toRightOf="@id/colorButton_red"
			android:layout_marginLeft="10px"
		></Button>
		
</RelativeLayout>